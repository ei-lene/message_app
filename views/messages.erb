<html>
  <head>
    <meta charset="utf-8" />
    <title></title>
    <link href="style.css" rel="stylesheet" />
  </head>
  <body>

    <div class="header">My Messages</div>

    <div id="message-stream">
      
      <!-- TODO: Add messages to the page -->
        <% @messages.each do |m| %>
          <div class="message">
            <a href="" class="close"></a>
            <div class="to">
               <span class="title">To:</span> 
               <%= m.to %>
            </div>
            <div class="from">
               <span class="title">From:</span> 
               <%= m.from %>
            </div>
            <div class="content">
             "<%= m.content %>"
            </div>
            <div class="time">
              <%= m.created_at.to_s.split("T").first %><br>
              <%= m.created_at.to_s.split("T").last %>
            </div>
          </div>
        <% end %>


    </div>
  </body>
</html>
